<h1> editing a new form</h1>
<% if @user.errors.any? %>
  <h2>The following errors prevented the new user from being saved</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </p>

  <p>
    <%= f.select :age, 0..100 %>
  </p>

  <%= f.submit %>
  </p>
<% end %>

<%= link_to "Cancel", root_path %>